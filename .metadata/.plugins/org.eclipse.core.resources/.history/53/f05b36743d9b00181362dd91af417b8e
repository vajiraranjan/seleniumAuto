package pk1;

public class ClassA {

	public static void main(String[] args) {
		
		int space=3,size=7;
		
		for(int i=1;i<=4;i++)
		{
			for( int k=1;k<=space;k++)
			{
				System.out.print(" ");
			}
			
			for(int j=1;j<=size;j++)
			{
			//	if()
				System.out.print("*");
			}
			System.out.println();
			space--;
			size=size-2;
		}
		

		//System.out.println("hello world");
	}

}
